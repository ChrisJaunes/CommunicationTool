<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:id="@+id/dialog_name"
        android:layout_width="match_parent"
        android:textSize="22sp"
        android:textColor="#0C0C0C"
        android:layout_height="wrap_content"
        android:text="text"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:text="字体颜色"
            android:textSize="15sp"
            android:layout_marginTop="8dp"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>
        <View
            android:id="@+id/chat_text_color_view"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_width="30dp"
            android:layout_height="30dp"/>
        <Spinner
            android:id="@+id/chat_text_color_spinner"
            android:layout_gravity="right"
            android:layout_marginLeft="20dp"
            android:gravity="right"
            android:spinnerMode="dropdown"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/colorAccent"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:text="气泡颜色"
            android:textSize="15sp"
            android:layout_marginTop="8dp"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>

        <View
            android:id="@+id/chat_background_color_view"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_width="30dp"
            android:layout_height="30dp"/>

        <Spinner
            android:id="@+id/chat_background_color_spinner"
            android:layout_marginLeft="20dp"
            android:layout_gravity="right"
            android:spinnerMode="dropdown"
            android:gravity="right"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/colorAccent"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:text="边框颜色"
            android:textSize="15sp"
            android:layout_marginTop="8dp"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>

        <View
            android:id="@+id/chat_border_color_view"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_width="30dp"
            android:layout_height="30dp"/>

        <Spinner
            android:id="@+id/chat_border_color_spinner"
            android:layout_marginLeft="20dp"
            android:layout_gravity="right"
            android:gravity="right"
            android:spinnerMode="dropdown"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>
    </LinearLayout>

    <Button
        android:id="@+id/confirm_color_chos_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textSize="20dp"
        android:text="确定"/>
</LinearLayout>